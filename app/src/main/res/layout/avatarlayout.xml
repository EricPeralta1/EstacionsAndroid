<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/avatarbackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <GridView
            android:id="@+id/AvatarView"
            android:layout_width="859dp"
            android:layout_height="751dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/avatarboard"
            android:horizontalSpacing="5dp"
            android:numColumns="4"
            android:paddingLeft="40dp"
            android:paddingTop="50dp"
            android:verticalSpacing="5dp" />

        <LinearLayout
            android:id="@+id/confirmAvatarLayout"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/avatarselectedlayout"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/avatarCopy"
                android:layout_width="270dp"
                android:layout_height="250dp"
                android:layout_gravity="left"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="120dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/cardbackground" />

            <ImageView
                android:id="@+id/startButton"
                android:layout_width="275dp"
                android:layout_height="275dp"
                android:layout_gravity="left"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="125dp"
                android:background="@drawable/playbutton"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>