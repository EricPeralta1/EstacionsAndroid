<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamelayoutbackground"
    android:id="@+id/gameLayoutBackground"
    android:scaleType="centerCrop"
    tools:context=".GameActivity">

    <ImageView
        android:id="@+id/itemView"
        android:layout_width="264dp"
        android:layout_height="264dp"
        android:layout_marginStart="200dp"
        android:layout_marginBottom="288dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/seasonsLayout"
        android:layout_width="325dp"
        android:layout_height="700dp"
        android:layout_marginStart="625dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageWinter"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/winter" />

        <ImageView
            android:id="@+id/imageSpring"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/spring"

            />

        <ImageView
            android:id="@+id/imageSummer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/summer" />

        <ImageView
            android:id="@+id/imageAutumn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/autumn" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>